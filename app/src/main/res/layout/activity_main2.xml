<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity2" >

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="145dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019"
        app:srcCompat="@drawable/ic_toolbar_logo"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="27dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"
        app:srcCompat="@drawable/ic_search"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="37dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.831"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"
        app:srcCompat="@drawable/ic_connected"
        tools:ignore="ContentDescription" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="408dp"
        android:layout_height="680dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="427dp"
                android:layout_height="520dp"
                tools:ignore="ExtraText,MissingConstraints,VisualLintBounds">

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="437dp"
                    android:layout_height="652dp"
                    android:foreground="@drawable/fade_gradient"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.04"
                    app:srcCompat="@drawable/vinland"
                    tools:ignore="ContentDescription,MissingConstraints,VisualLintBounds" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="376dp"
                    android:layout_height="59dp"
                    android:fontFamily="@font/lato"
                    android:text="@string/vinland_desc"
                    android:textColor="#FAFAFA"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.313"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.787"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="186dp"
                    android:layout_height="33dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="VINLAND SAGA"
                    android:textColor="#FAFAFA"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.066"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.679"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ver"
                    android:layout_width="166dp"
                    android:layout_height="52dp"
                    android:backgroundTint="#f37521"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/ver_ahora"
                    android:textColor="@color/black"
                    app:icon="@drawable/ic_cta_play"
                    app:iconGravity="textStart"
                    app:iconTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.057"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.906"
                    tools:ignore="TextContrastCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/lato"
                android:paddingTop="3dp"
                android:text="@string/nuestras_recomendaciones"
                android:textColor="#FAFAFA"
                android:textSize="18sp" />

            <HorizontalScrollView
                android:layout_width="409dp"
                android:layout_height="254dp"
                android:padding="10dp"
                tools:ignore="SpeakableTextPresentCheck,VisualLintBounds">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/bluelock"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/chainsaw"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/jujutsu"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/myhero"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/kimetsu"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/imageView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/naruto"
                        tools:ignore="ContentDescription" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="69dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="#24252A"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        tools:ignore="TextSizeCheck,VisualLintBounds">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/inicio"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:icon="@drawable/ic_bottom_navigation_home"
            app:iconGravity="textTop"
            tools:ignore="ButtonStyle,SmallSp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/watchlist"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:text="@string/mis_listas"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:icon="@drawable/ic_bottom_navigation_watchlist"
            app:iconGravity="textTop"
            tools:ignore="ButtonStyle,SmallSp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/browse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:text="@string/explorar"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:icon="@drawable/ic_bottom_navigation_browse"
            app:iconGravity="textTop"
            tools:ignore="ButtonStyle,SmallSp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/simulcast"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:text="@string/simulcast"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:icon="@drawable/ic_bottom_navigation_simulcast"
            app:iconGravity="textTop"
            tools:ignore="ButtonStyle,SmallSp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:focusableInTouchMode="true"

            android:text="@string/cuenta"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:icon="@drawable/ic_bottom_navigation_settings"
            app:iconGravity="textTop"
            tools:ignore="ButtonStyle,SmallSp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>